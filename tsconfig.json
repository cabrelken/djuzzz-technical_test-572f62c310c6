{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./resources/views/src/*"
            ]
        }
    },
    "include": [
        "./resources/views/src/**/*"
    ]
}